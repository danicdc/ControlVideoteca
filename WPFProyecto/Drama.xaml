<Window x:Class="WPFProyecto.Drama"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFProyecto"
        mc:Ignorable="d"
        Title="Drama" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#FF2196F3" Stroke="Black"/>
        <TextBlock Grid.Row="0" Margin="10" Text="Drama" FontSize="24" FontWeight="Bold"/>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Image x:Name="ImagenBotonDrama" Source="undo_FILL0_wght400_GRAD0_opsz48.png" Stretch="Fill" Width="48" Height="48" MouseLeftButtonDown="ImagenBotonDrama_MouseLeftButtonDown"/>
            <Image Source="add_FILL0_wght400_GRAD0_opsz48.png" Stretch="Fill" Width="48" Height="48"/>
            <Image Source="delete_FILL0_wght400_GRAD0_opsz48.png" Stretch="Fill" Width="48" Height="48"/>
        </StackPanel>

        <Rectangle Grid.Row="1" Fill="#FF6EC6FF" Stroke="Black"/>
    </Grid>
</Window>

